@model ItechArt.Survey.WebApp.ViewModels.RegistrationViewModel

<form asp-antiforgery="true" asp-action="Registration" asp-controller="Account">
  <div class="container">
      <h1>Register</h1>
      <p>Please fill in this form to create an account.</p>
      <hr>
      <div class="table">
          <dd>
              <figcaption asp-for="UserName">User name</figcaption>
              <input type="text" asp-for="UserName" id="username" placeholder="Enter user name"/>
              <span class="text-danger small" asp-validation-for="UserName"></span>
          </dd>
          <dd>
              <figcaption asp-for="Email" text="Email">Email</figcaption>
              <input asp-for="Email" id="email" placeholder="Enter Email"/>
              <span class="text-danger small" asp-validation-for="Email"></span>
          </dd>
          <dd>
              <figcaption asp-for="Password" text="Password">Password</figcaption>
              <input asp-for="Password" id="password" type="password" placeholder="Enter Password"/>
              <span class="text-danger small" asp-validation-for="Password"></span>
          </dd>
          <dd>
              <figcaption asp-for="RepeatPassword" text="Repeat password">Repeat password</figcaption>
              <input asp-for="RepeatPassword" id="repeatpassword" type="password" placeholder="Repeat Password"/>
              <span class="text-danger small" asp-validation-for="RepeatPassword"></span>
          </dd>
      </div>
      <input type="submit" value="Register"/>
      <div class="text-danger small" asp-validation-summary="ModelOnly"></div>
  </div>
</form>

@section Script {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}