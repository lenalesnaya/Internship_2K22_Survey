@using ItechArt.Survey.WebApp.ViewModels
@model ItechArt.Survey.WebApp.ViewModels.SignInViewModel

@{
    Layout = "_Layout";
}

<form asp-antiforgery="true" asp-action="SignIn" asp-controller="Account">
  <div>
      <div asp-validation-summary="ModelOnly"></div>
      <h1>Sign in</h1>
      <p>Please fill in this form to login your account.</p>
      <hr>
      <div>
          <label asp-for="Email"></label><br/>
          <input asp-for="Email" placeholder="Enter Email" value=""/>
          <span asp-validation-for="Email"></span>
      </div>
      <div>
          <label asp-for="Password"></label><br/>
          <input asp-for="Password" type="password" placeholder="Enter Password"/>
          <span asp-validation-for="Password"></span>
      </div>
    <input type="submit" value="Sign in"/>
    @Model.Error
  </div>
</form>