@model ItechArt.Survey.WebApp.ViewModels.ProfileViewModel


<link rel="stylesheet" href="~/css/Profile.css">
<div class ="container">
    <div class="row">
        <div class="col-sm-4">
            <img src="~/image/DefaultAvatar.png" class="img-thumbnail avatar">
        </div>
        <div class="col">
            <div>
                <h3>Username: </h3><p>@Model.User.UserName</p>
            </div>
            <div>
                <p>
                    <h3>Email: </h3><p>@Model.User.Email</p>
                </p>
            </div>
            <div style="list-style-type: none">
                <li>
                    <form asp-controller="Account" asp-action="LogOut" method="post">
                        <p>
                            <input class="nav-link text-dark" type="submit" value="Log out">
                        </p>
                    </form>
                </li>
            </div>
        </div>
    </div>
</div>