@using System.Net

<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>SurveyItechArt</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Style", false)
        @await RenderSectionAsync("Script", false)
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="display-5 font-weight-bold text-dark text-decoration-none" asp-area="" asp-controller="Home" asp-action="Home">SurveyItechArt</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div>
                    <div class="d-flex flex-row-reverse text-decoration-none" style="list-style-type: none">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <div>
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Registration">
                                    <span>Registration</span>
                                </a>
                            </div>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="row w-25">
                                <div class="col-sm-5">
                                    <img src="~/images/DefaultAvatar.png" class="img-thumbnail avatar">
                                    <figcaption>@*@Model.User.UserName*@Username</figcaption>
                                </div>
                                <div class="col">
                                    <div>
                                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile">
                                            <span>Profile</span>
                                        </a>
                                    </div>
                                    <div>
                                        <form asp-controller="Account" asp-action="LogOut" method="post">
                                            <input class="btn text-dark" type="submit" value="Log out">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </nav>
        </header>
        <div>
            @RenderBody()
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
               &copy; 2022 - SurveyItechArt - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    </body>
</html>